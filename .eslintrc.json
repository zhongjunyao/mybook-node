{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "plugin:react/recommended",
    "airbnb"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "@typescript-eslint",
    "eslint-plugin-prettier"
  ],
  "rules": {
    "prettier/prettier": "error",
    "arrow-body-style": "error",
    "prefer-arrow-callback": "error",
    "semi": ["error", "always"]
  }
}